<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="MobileAppProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MobileAppProject.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Recipes">

    <Shell.Resources>

        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" 
                    Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PrimaryDark}}" />
            <Setter Property="BarTextColor" 
                    Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource White}}" />
        </Style>
    </Shell.Resources>
    <ShellContent Title="Recipes" ContentTemplate="{DataTemplate views:RecipeListPage}"/>
</Shell>
