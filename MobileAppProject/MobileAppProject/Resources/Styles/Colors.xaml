<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Autumn Theme Colors -->
    <Color x:Key="Primary">#D2691E</Color>
    <Color x:Key="PrimaryDark">#8B4513</Color>
    <Color x:Key="PrimaryDarkText">#FFF8E1</Color>
    <Color x:Key="Secondary">#FF9800</Color>
    <Color x:Key="SecondaryDarkText">#4E342E</Color>
    <Color x:Key="Tertiary">#FFD700</Color>

    <Color x:Key="White">#FFF8E1</Color>
    <Color x:Key="Black">#3E2723</Color>
    <Color x:Key="Magenta">#B22222</Color>
    <Color x:Key="MidnightBlue">#4B3F72</Color>
    <Color x:Key="OffBlack">#5D4037</Color>

    <Color x:Key="Gray100">#F5DEB3</Color>
    <Color x:Key="Gray200">#E1B382</Color>
    <Color x:Key="Gray300">#C9A66B</Color>
    <Color x:Key="Gray400">#A67C52</Color>
    <Color x:Key="Gray500">#8D6E63</Color>
    <Color x:Key="Gray600">#6D4C41</Color>
    <Color x:Key="Gray900">#4E342E</Color>
    <Color x:Key="Gray950">#3E2723</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <Color x:Key="PrimaryMaroon">#A0522D</Color>
    <Color x:Key="AccentOrange">#E07A2F</Color>
    <Color x:Key="SoftYellow">#F6D55C</Color>
    <Color x:Key="CardBg">#FFF3E0</Color>
    <Color x:Key="TextPrimary">#4E342E</Color>
</ResourceDictionary>